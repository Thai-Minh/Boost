<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/gmc_color_white_1000</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <!--
        <item name="android:fontFamily">@font/coda</item>
        -->
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/gmc_color_white_1000</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:itemBackground">@color/gmc_color_white_1000</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/gmc_color_white_1000</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="WindowAnimationTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/gmclibs_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/gmclibs_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/gmclibs_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/gmclibs_slide_out_to_right</item>
    </style>

    <style name="MyTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="tabIndicatorColor">@color/gmc_color_yellow_300</item>
    </style>

    <style name="full_screen_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MyButton.Border" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/gmc_color_white_1000</item>
        <item name="android:textColor">@color/gmc_color_green_500</item>
    </style>

    <!-- Popup Menu Text Color styles -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/gmc_color_black_1000</item>
    </style>

    <style name="Button.White" parent="GmcButton">
        <item name="colorButtonNormal">#99FFFFFF</item>
        <item name="android:textColor">@color/gmc_color_grey_900</item>
    </style>

</resources>
