<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gmc_color_white_1000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="10dp"
    android:paddingRight="8dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/spacing_48"
        android:layout_height="@dimen/spacing_48"
        android:contentDescription="@string/empty"
        android:padding="@dimen/spacing_8"
        android:src="@drawable/ic_recycle_bin" />

    <TextView
        android:id="@+id/textViewJunkFoundSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btnCleanOnNotification"
        android:layout_toEndOf="@+id/imageView2"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dp"
        android:text="@string/empty"
        android:textColor="@color/gmc_color_red_800" />

    <Button
        android:id="@+id/btnCleanOnNotification"
        style="@style/GmcButton.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/spacing_6"
        android:paddingEnd="@dimen/spacing_6"
        android:text="@string/btn_clean"
        android:textAllCaps="true"
        android:textSize="14sp" />
</RelativeLayout>